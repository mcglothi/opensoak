[Unit]
Description=OpenSoak Hot Tub Controller
After=network.target

[Service]
User=pi
WorkingDirectory=/home/pi/opensoak/backend
Environment="DATABASE_URL=sqlite:////home/pi/opensoak/backend/hot_tub.db"
ExecStart=/home/pi/opensoak/backend/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 80
Restart=always

[Install]
WantedBy=multi-user.target
