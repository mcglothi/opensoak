[Unit]
Description=OpenSoak Frontend (Vite)
After=network.target

[Service]
User=mcglothi
Group=mcglothi
WorkingDirectory=/opt/opensoak/frontend
Environment="PATH=/home/mcglothi/.nvm/versions/node/v20.20.0/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/mcglothi/.nvm/versions/node/v20.20.0/bin/npm run dev -- --host 0.0.0.0 --port 5173
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
